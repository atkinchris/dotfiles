# Tests for token validity
# Usage: test_github_scopes <token>
function test_github_scopes() {
  local login=$(curl -sS -H "Authorization: token $1" https://api.github.com/user | jq -r .login)
  local headers=$(curl -sS -f -I -H "Authorization: token $1" https://api.github.com)
  local scopes=$(printf "%s\n" "$headers" | grep -i '^x-oauth-scopes:' | cut -d' ' -f2- | tr -d "[:space:]")
  local expiration=$(printf "%s\n" "$headers" | grep -i '^github-authentication-token-expiration:' | cut -d' ' -f2- | tr -d "[:space:]")

  echo "$login"
  echo "$scopes"
  echo "$expiration"
}

# Revokes one or more GitHub tokens
# Usage: revoke_github_token <token> [token...]
function revoke_github_token() {
  if [[ $# -eq 0 ]]; then
    echo "usage: revoke_github_token <token> [token...]" >&2
    return 1
  fi

  local tokens=("$@")
  local payload='{"credentials":['
  local first=1

  for token in "${tokens[@]}"; do
    if [[ $first -eq 0 ]]; then
      payload+=','
    else
      first=0
    fi
    payload+='"'"${token//\"/\\\"}"'"'
  done

  payload+=']}'

  local response
  response=$(curl -sS -L \
    -w "\n%{http_code}" \
    -X POST \
    -H "Accept: application/vnd.github+json" \
    -H "X-GitHub-Api-Version: 2022-11-28" \
    https://api.github.com/credentials/revoke \
    -d "$payload")

  local http_code=${response##*$'\n'}
  local body=${response%$'\n'$http_code}

  if [[ "$http_code" == "202" ]]; then
    echo "Token revocation accepted (HTTP 202)."
    return 0
  fi

  echo "Failed to revoke GitHub token(s); HTTP status: $http_code" >&2
  if [[ -n "$body" ]]; then
    echo "$body" >&2
  fi
  return 1
}

# Mirror and bundle a GitHub repository
# Usage: bundle_github <repo_url> <output_name>
function bundle_github() {
	local url=$1
	local output=$2
	local repo_dir=$(basename $url)

  git clone --mirror $url || return 1
  cd "$repo_dir" || return 1
  git bundle create "../$output.bundle" --all || { cd ..; rm -rf "$repo_dir"; return 1; }
  cd .. || return 1 # Should generally succeed, but good practice
  rm -rf "$repo_dir"
}

# Encrypt stdin for one or more GitHub users or decrypt for self with age
# Usage: printf "secret" | github_crypt <user1> [user2 ...]  # encrypt to multiple recipients
#        cat file.age | github_crypt                         # decrypt
#        github_crypt <user1> [user2 ...]                    # interactive encrypt (no echo)
#        github_crypt                                        # interactive decrypt (no echo)
# https://github.com/FiloSottile/age
function github_crypt() {
	local input

	# Read input either interactively (silent) or from stdin
	if [ -t 0 ]; then
		read -s input
	else
		input=$(cat)
	fi

  # Encrypt or decrypt
  if [ -z "$1" ]; then
		# Decrypt using local age identity from 1Password
    echo "$input" | age -d -i <(op read "op://Private/sc2bey5o5zvzdxuya6yzsrpp4u/private key")
    return
  fi

  # Encrypt to all recipients by streaming their public keys
  # Example: printf 'https://github.com/%s.keys ' alice bob
  # -> https://github.com/alice.keys https://github.com/bob.keys
  # curl accepts multiple URLs and concatenates responses in order
  echo "$input" | age -a -R <(
    curl -sS $(printf 'https://github.com/%s.keys ' "$@")
  )
}

# Archive a GitHub repository
# Usage: gh_archive <org> <repo>
function gh_archive() {
  local org=$1
  local repo=$2
  gh repo archive -y $org/$repo
}

# Delete a GitHub repository
# Usage: gh_delete <org> <repo>
function gh_delete() {
  local org=$1
  local repo=$2
  gh repo delete --yes $org/$repo
}

# Add a team to a GitHub repository
# Usage: gh_add_team <org> <repo> <team_slug> <permission>
function gh_add_team() {
  local org=$1
	local repo=$2
	local team_slug=$3
  local permission=$4

  gh api \
    --method PUT \
    "/orgs/$org/teams/$team_slug/repos/$org/$repo" \
    -f permission="$permission"
}

# Add a collaborator to a GitHub repository
# Usage: gh_add_collaborator <org> <repo> <collaborator> <permission>
function gh_add_collaborator() {
  local org=$1
  local repo=$2
  local collaborator=$3
  local permission=$4

  gh api \
    --method PUT \
    "/repos/$org/$repo/collaborators/$collaborator" \
    -f permission="$permission"
}

# Remove a user from a GitHub enterprise
# Usage: gh_remove_user <enterprise> <user>
function gh_remove_user() {
  local enterprise=$1
  local user=$2

  # Get the user ID
  local user_id=$(gh api graphql -f query='query($login: String!) { user(login:$login) { id } }' -F login=$user | jq -r '.data.user.id')

  # Get the enterprise ID
  local enterprise_id=$(gh api graphql -f query='query($slug: String!) { enterprise(slug: $slug) { id } }' -F slug=$enterprise | jq -r '.data.enterprise.id')

  gh api graphql \
    -F enterprise=$enterprise_id \
    -F user=$user_id \
    -f query='
mutation($enterprise:ID!, $user:ID!) {
  removeEnterpriseMember(
    input: {enterpriseId: $enterprise, userId: $user}
  ) {
    clientMutationId
  }
}
'
}

# Add a repo to a GitHub app installation
# Usage: gh_app_add <installationId> <org> <repo>
function gh_app_add() {
  local installationId=$1
  local org=$2
  local repo=$3

  local repoId=$(gh api /repos/$org/$repo | jq -r .id)

  echo "Adding $repo to $org with installationId $installationId and repoId $repoId"

  gh api -X PUT /user/installations/$installationId/repositories/$repoId
}

# Look up a user's SAML identity for a GitHub organization
# Usage: gh_saml_lookup <org> <email>
function gh_saml_lookup() {
	local org="${1:?Provide an organization slug}"
	local email="${2:?Provide an email address}"

	gh api graphql -f query='query($org: String!, $email: String!) { organization(login: $org) { samlIdentityProvider { externalIdentities(first: 10, userName: $email) { nodes { id scimIdentity { username } user { login } } } } } }' -f org="$org" -f email="$email"
}
