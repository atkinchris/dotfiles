# =============================================================================
# NAVIGATION SHORTCUTS
# =============================================================================
# Directory navigation
alias ..="cd .."
alias ...="cd ../.."
alias ~="cd ~"

# Quick directory access
alias s="cd ~/Source"
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"

# =============================================================================
# FILE LISTING (Enhanced ls with eza)
# =============================================================================
# List all files colorized in long format
alias l="eza -l --icons --git -a --no-user --group-directories-first"

# List only directories
alias ld="l --only-dirs"

# List files in a tree format
alias lt="l --tree --level=2"

# =============================================================================
# SYSTEM UTILITIES
# =============================================================================
# Architecture and system info
alias archx64="arch -x86_64 /bin/zsh"
alias whicharch="echo 'OS:' && uname -p && echo 'node:' && node -p process.arch"

# Cryptographic utilities
alias sha256="shasum -a 256"

# =============================================================================
# APPLICATION SHORTCUTS
# =============================================================================
# Tailscale VPN
alias tailscale="/Applications/Tailscale.app/Contents/MacOS/Tailscale"
